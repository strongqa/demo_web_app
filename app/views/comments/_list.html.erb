<% @article.comments.each do |comment| %>
  <div class="comments__item">
    <div class="row">
      <div class="col-auto">
        <div class="comments__img">
          <%=image_tag( comment.user.avatar.present? ? comment.user.avatar : default_avatar )%>
        </div>
      </div>
      <div class="col">
        <div class="comments__author"><%= comment.user.name %></div>
        <div class="comments__created-at">
          <%= comment_created_date(comment) %>
        </div>
        <p class="comments__body"><%= comment.body %></p>
      </div>
    </div>
    <% if signed_in_as_admin? %>
      <div class="admin__wrapper">
        <%= btn_delete 'Destroy Comment', [comment.article, comment] %>
      </div>
    <% end %>
  </div>
<% end %>
