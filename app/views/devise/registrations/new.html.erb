<%= title 'Sign Up', with_h3: false %>
<div class="authform">
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :role => 'form'}) do |f| %>
    <%= devise_error_messages! %>
    <div class="form-group">
      <%= f.text_field :name, :autofocus => true, class: 'form-control', placeholder: :name %>
    </div>
    <div class="form-group">
      <%= f.email_field :email, class: 'form-control', placeholder: :email %>
    </div>
    <div class="form-group">
      <%= f.password_field :password, class: 'form-control', placeholder: :password %>
    </div>
    <div class="form-group">
      <%= f.password_field :password_confirmation, class: 'form-control', placeholder: :password_confirmation %>
    </div>
     <%= f.submit 'Sign up', :class => 'btn btn__form btn__big' %>
  <% end %>
  <div class="authform__sign-up">
    <span>Already have the account?</span>
    <%= link_to 'Sign in', new_user_session_path  %>
  </div>
</div>
