<% title 'Listing Articles' %>
<% if signed_in_as_admin? %>
  <div class="admin__wrapper">
    <%= link_to 'New article', new_article_path, class: 'btn btn-success btn__icon btn__create' %>
  </div>
<% end %>

<% @articles.each do |article| %>

  <section class="article__item">

    <%= link_to article, class: 'article__img' do %>
      <img src="http://deothemes.com/envato/enigma/html/img/blog/post_img_1.jpg" alt="">
      <!-- TODO replace src to proper from cdn-->
    <% end %>

    <div class="article__desc">
      <div class="article__date hidden-sm hidden-xs">
        <span>17</span>
        <span>jul</span>
      </div>
      <h2><%= link_to article.title, article, class: 'article__title' %></h2>
      <%= render 'article_meta' %>
    </div>

    <p class="article__text">
      <%= article.text %>
    </p>

    <%= link_to 'Read more', article, class: 'article__readmore btn__underline' %>

  </section>

  <% if signed_in_as_admin? %>
    <div class="admin__wrapper">
      <%= link_to 'Edit', edit_article_path(article), class: 'btn btn-success btn__icon btn__edit' %>
      <%= link_to 'Destroy', article_path(article),
                  method: :delete, data: {confirm: 'Are you sure?'},
                  class: 'btn btn-danger btn__icon btn__delete' %>
    </div>
  <% end %>

<% end %>

<%= will_paginate @articles, previous_label: 'prev', next_label: 'next', inner_window: 1, outer_window: 0 %>


